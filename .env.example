# ==================== 通用配置 ====================
HOST=0.0.0.0
PORT=8000
DEBUG=true

# CORS 配置
CORS_ORIGINS=["*"]

# ==================== LLM 配置 ====================
# 通义千问 (Qwen)
QWEN_LLM_PROVIDER=qwen
QWEN_LLM_BASE_URL=https://dashscope.aliyuncs.com/api/v1
QWEN_LLM_API_KEY=your_qwen_api_key_here
QWEN_LLM_MODEL=qwen-plus

# DeepSeek
DS_LLM_PROVIDER=ds
DS_LLM_BASE_URL=https://api.deepseek.com/v1
DS_LLM_API_KEY=your_deepseek_api_key_here
DS_LLM_MODEL=deepseek-chat

# OpenAI
OPENAI_LLM_PROVIDER=openai
OPENAI_LLM_BASE_URL=https://api.openai.com/v1
OPENAI_LLM_API_KEY=your_openai_api_key_here
OPENAI_LLM_MODEL=gpt-4o-mini

# 智谱AI
ZHIPU_LLM_PROVIDER=zhipu
ZHIPU_LLM_BASE_URL=https://open.bigmodel.cn/api/paas/v4
ZHIPU_LLM_API_KEY=your_zhipu_api_key_here
ZHIPU_LLM_MODEL=glm-4

# ==================== 子模块特定配置 ====================
# Flight Booking
FLIGHT_API_KEY=your_flight_api_key_here
FLIGHT_BASE_URL=https://api.flightbooking.com/v1

# Self Media
SELF_MEDIA_OUTPUT_DIR=./output/articles

# Self Video
SELF_VIDEO_OUTPUT_DIR=./output/videos

# ==================== 其他配置 ====================
LOG_LEVEL=INFO
MAX_WORKERS=10
